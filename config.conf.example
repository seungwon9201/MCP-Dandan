# ============================================================================
# 82ch-engine 설정 파일
# ============================================================================
# 이 파일은 큐 기반 분석 엔진 시스템의 모든 설정을 관리합니다.
#
# 주요 구성 요소:
#   1. [system] - 시스템 전역 큐 설정
#   2. [event_provider] - 외부 프로세스 실행 설정
#   3. [log_writer] - 로그 파일 저장 설정
#   4. [sensitive_file_engine] - 민감 파일 탐지 엔진 설정
# ============================================================================

[system]
# ===== 시스템 전역 큐 설정 =====

# 메인 이벤트 큐 최대 크기 (모든 이벤트 저장)
# - 클수록 버스트 트래픽에 유리하지만 메모리 사용 증가
# - 작으면 메모리 절약
# - 큐가 가득 차면 이벤트가 차단됨 (메시지 손실 방지)
main_queue_maxsize = 10000

# 각 엔진별 입력 큐 최대 크기
# - 각 엔진이 받을 이벤트 복사본을 저장하는 큐
engine_queue_maxsize = 1000

# 이벤트 로그 큐 최대 크기 (입력 이벤트 로깅용)
event_log_queue_maxsize = 5000

# 결과 로그 큐 최대 크기 (엔진 결과 저장)
result_log_queue_maxsize = 5000

# 큐 get 타임아웃 (초)
# - 큐에서 데이터를 가져올 때 대기 시간
# - 응답성과 CPU 사용의 균형
queue_timeout = 0.1

[event_provider]
# ===== 외부 프로세스 실행 설정 =====

# 외부 프로세스 실행 경로
# ★ 중요: 환경에 맞게 반드시 수정하세요! ★
# 예: C:\path\to\your\observer.exe
process_path = C:\Users\jeong\82ch-claude-observer\ETW\bin\Debug\ETW.exe

[log_writer]
# ===== 로그 파일 저장 설정 =====

# 로그 파일 저장 경로
log_directory = ./logs

# 로그 파일명 접두사 (날짜가 자동으로 추가됨)
# 예: engine_results_20250128.jsonl
log_filename_prefix = engine_results

# 로그 파일 최대 크기 (MB)
# - 이 크기를 초과하면 새 파일로 로테이션
max_log_file_size = 100

# 로그 파일 최대 개수 (로테이션)
# - 오래된 파일부터 삭제
max_log_files = 10

[sensitive_file_engine]
# ===== 민감 파일 탐지 엔진 설정 =====

# 엔진 활성화 여부
enabled = true

[EventProvider]
# ZeroMQ Subscriber 주소 (MCPCollector의 Publisher 주소)
zmq_address = tcp://localhost:5555

# 레거시: 외부 프로세스 경로 (ZeroMQ 사용 시 불필요)
# process_path = C:\path\to\ETW.exe


[Queue]
# 메인 이벤트 큐 크기
main_queue_size = 10000

# 각 엔진별 큐 크기
engine_queue_size = 1000

# 이벤트 로그 큐 크기
event_log_queue_size = 5000

# 결과 로그 큐 크기
result_log_queue_size = 5000

# 큐 타임아웃 (초)
queue_timeout = 0.5


[Engine]
# Sensitive File Engine 활성화 여부
sensitive_file_enabled = true

# Semantic Gap Engine 활성화 여부
semantic_gap_enabled = true


[Log]
# 로그 파일 저장 디렉토리
log_dir = ./logs

# 로그 파일 로테이션 크기 (MB)
# 파일 크기가 이 값을 초과하면 새 파일 생성
rotation_size_mb = 100
